<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <title>Train Ticket</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      .ticket {
        width: 600px;
        margin: 20px auto;
        border: 2px dashed #333;
        padding: 20px;
      }

      .header {
        text-align: center;
        margin-bottom: 20px;
      }

      .header h1 {
        margin: 0;
      }

      .section {
        margin-bottom: 15px;
      }

      .section-title {
        font-weight: bold;
        border-bottom: 1px solid #ccc;
        margin-bottom: 5px;
      }

      .info {
        display: flex;
        justify-content: space-between;
      }

      .qr {
        text-align: center;
        margin-top: 20px;
      }

      .qr img {
        width: 120px;
        height: 120px;
      }

      .footer {
        font-size: 12px;
        color: #666;
        text-align: center;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class='ticket'>
      <div class='header'>
        <h1>Passenger Ticket</h1>
        <p>Railway Transport of Ukraine</p>
      </div>

      <div class='section'>
        <div class='section-title'>Passenger Information</div>
        <div class='info'>
          <span>Name: <strong>{{passengerName}}</strong></span>
          <span>Document: <strong>{{documentId}}</strong></span>
        </div>
      </div>

      <div class='section'>
        <div class='section-title'>Train Information</div>
        <div class='info'>
          <span>Train: <strong>{{trainNumber}} {{from}} - {{to}}</strong></span>
          <span>Date: <strong>{{departureDate}}</strong></span>
        </div>
        <div class='info'>
          <span>Departure: <strong>{{departureTime}}</strong></span>
          <span>Arrival: <strong>{{arrivalTime}}</strong></span>
        </div>
      </div>

      <div class='section'>
        <div class='section-title'>Boarding</div>
        <div class='info'>
          <span>Carriage: <strong>{{carriage}}</strong></span>
          <span>Seat: <strong>{{seat}}</strong></span>
        </div>
      </div>

      <div class='qr'>
        <img
          src='https://api.qrserver.com/v1/create-qr-code/?data=1234567890&size=120x120'
          alt='QR Code'
        />
        <p>Code for ticket verification</p>
      </div>

      <div class='footer'>
        Please arrive at the station at least 20 minutes before train departure.
        <br />
        This ticket is only valid with an identification document.
      </div>
    </div>
  </body>
</html>